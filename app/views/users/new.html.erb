<body id="main">
<div class="container" id="form-container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

    <!-- Heading -->

     <h1>SIGN UP</h1>
     <br>

          <!-- Form to add new User -->

          <%= form_for @user do |f| %>
            
            <!-- First Name field -->

            <div class="form-group">
              <label>First Name</label>
              <%= f.text_field :first_name, class: "form-control", placeholder: "Enter first name"%>

              <!-- Error message if name isn't valid -->

              <% if @user.errors.messages[:first_name].any? %>
                <div class='alert alert-danger' role='alert'>>
                  <% @user.errors.messages[:first_name].each do |message| %>
                    <%= message %>
                  <% end %>
                </div>
              <% end %>

            </div>  

            <!-- Last Name field -->

            <div class="form-group">
              <label>Last Name</label>
              <%= f.text_field :last_name, class: "form-control", placeholder: "Enter last name"%>

              <!-- Error message if name isn't valid -->

              <% if @user.errors.messages[:last_name].any? %>
                <div class='alert alert-danger' role='alert'>>
                  <% @user.errors.messages[:last_name].each do |message| %>
                    <%= message %>
                  <% end %>
                </div>
              <% end %>

            </div>  

            <!-- Email Field -->

            <div class="form-group">
              <label>Email address</label>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter email"%>

              <!-- Error message if email isn't valid -->

              <% if @user.errors.messages[:email].any? %>
                <div class='alert alert-danger' role='alert'>>
                  <% @user.errors.messages[:email].each do |message| %>
                    <%= message %>
                  <% end %>
                </div>
              <% end %>

            </div>

            <!-- Password Field -->

            <div class="form-group">
              <label>Password</label>
              <%= f.password_field :password, class: "form-control", placeholder: "Enter password"%>

              <!-- Error message if password isn't valid -->

              <% if @user.errors.messages[:password].any? %>
                <div class='alert alert-danger' role='alert'>>
                  <% @user.errors.messages[:password].each do |message| %>
                    <%= message %>
                  <% end %>
                </div>
              <% end %>

            </div>

            <!-- Password Confirmation Field -->

            <div class="form-group">
              <label>Password Confirmation</label>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password again"%>

              <!-- Error message if password confirmation isn't valid -->

              <% if @user.errors.messages[:password_confirmation].any? %>
                <div class='alert alert-danger' role='alert'>>
                  <% @user.errors.messages[:password_confirmation].each do |message| %>
                    <%= message %>
                  <% end %>
                </div>
              <% end %>

            </div>
            <br>
            
            <!-- Create account button -->

            <%= f.submit 'Create Account', class: "btn btn-success"%>

          <% end %>


    </div>
  </div>
</div>
</body> 